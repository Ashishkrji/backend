<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MaaJanki Web Tech - Home Dashborad</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <style>
      body {
        font-family: "Poppins", sans-serif;
        background: #f4f6f8;
        scroll-behavior: smooth;
      }

      .navbar {
        background: #dc2564;
      }

      .navbar a {
        color: #fff !important;
        font-weight: 500;
        margin-left: 0.5rem;
      }

      .hero {
        background: url("https://via.placeholder.com/1600x600") no-repeat center
          center;
        background-size: cover;
        height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #000;
      }

      .hero h1 {
        font-size: 3rem;
        font-weight: 700;
        text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
      }

      .hero p {
        font-size: 1.2rem;
        margin-top: 1rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
      }

      .btn-hero {
        margin-top: 1.5rem;
        font-size: 1.1rem;
        padding: 0.6rem 1.5rem;
        border-radius: 50px;
      }

      .projects-section {
        padding: 4rem 2rem;
      }

      .project-card {
        border: none;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s;
        text-transform: capitalize;
      }

      .project-card:hover {
        transform: scale(1.03);
      }

      .project-card img {
        height: 200px;
        object-fit: cover;
      }

      footer {
        padding: 2rem 0;
        text-align: center;
        color: #000;
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="/">MaaJanki Web Tech</a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
            <% if (!user) { %>
            <li class="nav-item">
              <a class="btn btn-dark" href="/auth/login">Login</a>
            </li>
            <% } else { %>
            <li class="nav-item">
              <span class="navbar-text text-white me-3">Welcome, <%= user.name
                %>!</span>
            </li>
            <li class="nav-item">
              <a href="/portfolio" class="btn btn-dark me-2">View Portfolio</a>
              <a class="btn btn-dark" href="/auth/logout">Logout</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
      <div>
        <h1>Welcome to MaaJanki Web Tech</h1>
        <p>Your one-stop solution for amazing projects & services</p>
        <% if (!user) { %>
        <a href="/auth/login" class="btn btn-warning btn-hero">Login to
          Dashboard</a>
        <% } else { %>
        <a href="/dashboard" class="btn btn-danger btn-hero">Go to Dashboard</a>
        <% } %>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="projects-section">
      <div class="container">
        <h2 class="mb-4 text-center">Our Latest Projects</h2>
        <div class="row">
          <% if (projects.length > 0) { %>
          <% projects.forEach(project => { %>
          <div class="col-md-4 mb-4">
            <div class="card project-card">
              <% if (project.image) { %>
              <img
                src="/uploads/<%= project.image %>"
                class="card-img-top"
                alt="<%= project.title %>" />
              <% } else { %>
              <img
                src="https://via.placeholder.com/400x200"
                class="card-img-top"
                alt="<%= project.title %>" />
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= project.title %></h5>
                <p class="card-text"><%= project.description %></p>
                <% if (project.websiteUrl) { %>
                <a
                  href="<%= project.websiteUrl %>"
                  target="_blank"
                  class="btn btn-primary">Visit Website</a>
                <% } %>
              </div>
            </div>
          </div>
          <% }); %>
          <% } else { %>
          <p class="text-center">No projects available yet.</p>
          <% } %>
        </div>
      </div>
    </section>

    <footer>
      &copy; <%= new Date().getFullYear() %> MaaJanki Web Tech. All rights reserved.
    </footer>
  </body>
</html>
